<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressTracker">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
        <TextView
            android:id="@+id/course_label"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Courses:"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_label"
            android:layout_marginTop="5dp"
            android:text="Planned/inProgress:"
            android:id="@+id/courses_inProgress"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/courses_inProgress"
            android:text="Completed:"
            android:id="@+id/courses_completed"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/courses_completed"
            android:text="Dropped:"
            android:id="@+id/courses_dropped"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/courses_dropped"
            android:id="@+id/courses_percent"
            android:text="You are done with 0% of your courses."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/courses_percent"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Assessments:"
            android:id="@+id/assessment_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/assessment_title"
            android:text="Not taken:"
            android:id="@+id/assessment_notTaken"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/assessment_notTaken"
            android:text="Passed:"
            android:id="@+id/assessment_passed"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/assessment_passed"
            android:text="Failed:"
            android:id="@+id/assessment_failed"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/assessment_failed"
            android:id="@+id/assessment_percent"
            android:text="You are done with 0% of your assessments."/>

            

    </RelativeLayout>

</ScrollView>